<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">
        <Button
            android:id="@+id/back_button5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:background="@drawable/ic_action_back"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="126dp"
            android:text="通知"
            android:textColor="#202020"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/system_version"
            android:layout_width="260dp"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:layout_height="30dp"
            android:text="系统版本"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="8dp"
            android:background="#ffffff"
            android:paddingRight="15dp"
            android:textSize="10sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/version_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:textSize="12sp"
        android:background="#ffffff"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:text="拿木头玩具学编程，这是麻省理工设计的早教拿木头玩具学编程，这是麻省理工设计的早教"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/system_opti"
            android:layout_width="260dp"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:layout_height="30dp"
            android:text="系统优化"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/time1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="8dp"
            android:background="#ffffff"
            android:paddingRight="15dp"
            android:textSize="10sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/opti_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:textSize="12sp"
        android:background="#ffffff"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:text="拿木头玩具学编程，这是麻省理工设计的早教拿木头玩具学编程，这是麻省理工设计的早教"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/article_vio"
            android:layout_width="260dp"
            android:background="#ffffff"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:layout_height="30dp"
            android:text="文章违规"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:paddingTop="8dp"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:textSize="10sp"/>
        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="8dp"
            android:background="#ffffff"
            android:paddingRight="15dp"
            android:textSize="10sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/vio_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:textSize="12sp"
        android:background="#ffffff"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:text="拿木头玩具学编程，这是麻省理工设计的早教拿木头玩具学编程，这是麻省理工设计的早教"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
</LinearLayout>
